<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="@color/white_color"
    android:orientation="vertical">

    <include
        android:id="@+id/appBar"
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ShowLogin"
            style="@style/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="در صفحه شروع برنامه، کاربر باید رمز خود را وارد کند" />

        <CheckBox
            android:id="@+id/chboxShowLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btnBkSettings"
            android:checked="true"
            android:textDirection="rtl" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtActivatePass"
            style="@style/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="تغییر رمز ورود" />

        <CheckBox
            android:id="@+id/chboxchangePass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:checked="true" />

    </LinearLayout>

    <EditText
        android:id="@+id/txtPass"
        style="@style/total"
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@color/bgedit"
        android:textDirection="rtl" />

    <Button
        android:id="@+id/btnSaveSettings"
        style="@style/primText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:layout_marginTop="30dp"
        android:background="@color/bgDark"
        android:onClick="gotoMainAct"
        android:text="ذخیره" />


</LinearLayout>