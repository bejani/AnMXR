<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >
    <layer-list>
        <item android:right="3dp" android:top="3dp">
            <shape>
                <corners android:radius="5dp" />
                <solid android:color="#c2c2c6" />
            </shape>
        </item>
       
    </layer-list>
</item>

<item android:state_enabled="false" >
    <layer-list>
        <item android:right="7dp" android:top="7dp">
            <shape>
                <corners android:radius="71dp" />
                <solid android:color="#111111" />
            </shape>
        </item>
       
    </layer-list>
</item>
<item>
    <layer-list>
        <item android:right="1dp" android:top="1dp">
            <shape>
                <corners android:radius="10dp" />
                <stroke android:width="3dip" android:color="#ffffff"></stroke>
                <solid android:color="#c0c0c0" />
            </shape>
        </item>
       
    </layer-list>
</item>
</selector>
