<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >
    <layer-list>
        <item android:right="7dp" android:top="7dp">
            <shape>
                <corners android:radius="5dp" />
                <solid android:color="#303f9f" />
            </shape>
        </item>
        <item android:bottom="5dp" android:left="4dp">
            <shape>
                <gradient android:angle="270" 
                    android:endColor="#03a9f4" android:startColor="#c5cae9" />
               
                <corners android:radius="4dp" />
                <padding android:bottom="10dp" android:left="10dp" 
                    android:right="10dp" android:top="10dp" />
            </shape>
        </item>
    </layer-list>
</item>
<item android:state_hovered="true" >
    <layer-list>
        <item android:right="7dp" android:top="7dp">
            <shape>
                <corners android:radius="5dp" />
                <solid android:color="#03a9f4" />
            </shape>
        </item>
        <item android:bottom="5dp" android:left="4dp">
            <shape>
                <gradient android:angle="270" 
                    android:endColor="#03a9f4" android:startColor="#c5cae9" />
               
                <corners android:radius="4dp" />
                <padding android:bottom="10dp" android:left="10dp" 
                    android:right="10dp" android:top="10dp" />
            </shape>
        </item>
    </layer-list>
</item>

<item>
    <layer-list>
        
        <item android:bottom="5dp" android:left="4dp">
            <shape>
                <gradient android:angle="270" 
                    android:endColor="#4caf50" android:startColor="#c1d893" />
               
                <corners android:radius="4dp" />
                <padding android:bottom="10dp" android:left="10dp" 
                    android:right="10dp" android:top="10dp" />
            </shape>
        </item>
    </layer-list>
</item>
</selector>
